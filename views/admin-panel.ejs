<link href="https://unpkg.com/tabulator-tables@4.1.4/dist/css/tabulator.min.css" rel="stylesheet">
<header role='banner'>
    <h3>
        <%= userName %>
    </h3>
    <ul class='avatar-login'>
        <li class='avatar'>
            <a href=''><img src='/image/<%= id %>'></a>
        </li>
        <li><a href='/adminLogin' class='logout'>Logout</a></li>
    </ul>
</header>
<div class='header' id='header'>
    <img class='logo' src='./images/nemsa_logo.png'>
</div>

<main role='dashboard'>
    <div class='container'>
        <h2>Manage Users/Report</h2>
        <div class='toggle-buttons'><button class='btn' id='add'>Add User</button> <button class='btn' id='modify'>Edit
                User</button> <button class='btn' id='report'>Get Report</button> </div>
        <div class='docker' id='docker-1'>
            <form action='/addUser' method='POST' encrypt='multipart/form-data' id='add_user'>
                <div>
                    <label for='firstName'>First Name</label>
                    <input type='text' name='firstName' onkeyup='capitalize(this)' required>
                </div>

                <div>
                    <label for='lastName'>Last Name</label>
                    <input type='text' name='lastName' onkeyup='capitalize(this)' required>
                </div>

                <div>
                    <label for='staffID'>Staff ID</label>
                    <input type='text' name='staffID' required>
                </div>
                <div>
                    <label for='staffEmail'>Staff Email</label>
                    <input type='email' name='staffEmail' required>
                </div>

                <div>
                    <label for='password'>Password</label>
                    <input type='password' name='password' minlength="6" required>
                </div>
                <div>
                    <label for='confirmPassword'>Confirm Password</label>
                    <input type='password' name='confirmPassword' minlength="6" required>
                </div>

                <div class='radio-div'>
                    <label>Administrator</label>

                    <label class='radio-button'>
                        <input type='radio' name='admin' value='no' checked='checked'>
                        <span class='label-visible'>
                            <span class='fake-radiobutton'></span>
                            No
                        </span>
                    </label>

                    <label class='radio-button'>
                        <input type='radio' name='admin' value='yes'>
                        <span class='label-visible'>
                            <span class='fake-radiobutton'></span>
                            Yes
                        </span>
                    </label>

                </div>

                <div>
                    <label for='avatar'>Upload Image</label>
                    <input type='file' name='avatar' accept='image/jpeg, image/png' required />
                </div>

                <div>
                    <button type='submit' class='btn'>Submit</button>
                </div>
            </form>
            <div class='messages-div'>
                <div id='messages-1'></div>
                <div class='loader' id='loader'>Loading...</div>
            </div>
        </div>

        <div class='docker' id='docker-2'>
            <form action='/editUser' method='POST' id='edit_user'>
                <div>
                    <label for='firstName'>First Name</label>
                    <input type='text' name='firstName' onkeyup='capitalize(this)' required>
                </div>

                <div>
                    <label for='lastName'>Last Name</label>
                    <input type='text' name='lastName' onkeyup='capitalize(this)' required>
                </div>
                <div>
                    <label for='staffID'>Staff ID</label>
                    <input type='text' name='staffID' required>
                </div>

                <div id='remove-button'>
                    <button type='submit' class='btn'>Search</button>
                </div>
            </form>
            <div class='messages-div'>
                <div id='messages-2'></div>
                <div class='loader' id='loader'>Loading...</div>
            </div>
        </div>

        <div class='docker' id='docker-3'>
            <div class='toggle-buttons report-div'><button class='btn' id='byState'>By State</button> <button class='btn'
                    id='byDate'>By Date</button> </div>
                    <div class="mini-docker">
                        <div id="mini-docker-1">
                                <form action='/byState' method='POST' id='byStateForm'>
                                    <div>
                                            <label for='state'>State</label>
                                            <select name='state'>
                                                <option value='Abuja FCT'>Abuja FCT</option>
                                                <option value='Abia'>Abia</option>
                                                <option value='Adamawa'>Adamawa</option>
                                                <option value='Akwa Ibom'>Akwa Ibom</option>
                                                <option value='Anambra'>Anambra</option>
                                                <option value='Bauchi'>Bauchi</option>
                                                <option value='Bayelsa'>Bayelsa</option>
                                                <option value='Benue'>Benue</option>
                                                <option value='Borno'>Borno</option>
                                                <option value='Cross River'>Cross River</option>
                                                <option value='Delta'>Delta</option>
                                                <option value='Ebonyi'>Ebonyi</option>
                                                <option value='Edo'>Edo</option>
                                                <option value='Ekiti'>Ekiti</option>
                                                <option value='Enugu'>Enugu</option>
                                                <option value='Gombe'>Gombe</option>
                                                <option value='Imo'>Imo</option>
                                                <option value='Jigawa'>Jigawa</option>
                                                <option value='Kaduna'>Kaduna</option>
                                                <option value='Kano'>Kano</option>
                                                <option value='Katsina'>Katsina</option>
                                                <option value='Kebbi'>Kebbi</option>
                                                <option value='Kogi'>Kogi</option>
                                                <option value='Kwara'>Kwara</option>
                                                <option value='Lagos'>Lagos</option>
                                                <option value='Nassarawa'>Nassarawa</option>
                                                <option value='Niger'>Niger</option>
                                                <option value='Ogun'>Ogun</option>
                                                <option value='Ondo'>Ondo</option>
                                                <option value='Osun'>Osun</option>
                                                <option value='Oyo'>Oyo</option>
                                                <option value='Plateau'>Plateau</option>
                                                <option value='Rivers'>Rivers</option>
                                                <option value='Sokoto'>Sokoto</option>
                                                <option value='Taraba'>Taraba</option>
                                                <option value='Yobe'>Yobe</option>
                                                <option value='Zamfara'>Zamfara</option>
                                            </select>
                                        </div>
                            
                                        <div>
                                                <label for='test'>Test</label>
                                                <select name='test'>
                                                    <option value='RoutineTest'>Routine Test</option>
                                                    <option value='TypeTest'>Type Test</option>
                                                    <option value='ReCertification'>Recertification</option>
                                                </select>
                                            </div>
                                            <div>
                                                <button type='submit' class='btn'>Submit</button>
                                            </div>
                                        </form>
                                        <div class='messages-div reports-loader'>
                                                <div class='loader' id='loader'>Loading...</div>
                                                <div id='downloadBtns'> <button class="btn" id="csvBtn1">Download CSV</button> <button class="btn" id="pdfBtn1">Download PDF</button></div>
                                                <div id='messages-11'></div>
                                               
                                            </div>
                        </div>
                    <div id="mini-docker-2">
                            <form action='/byDate' method='POST' id='byDateForm'>
                                <div>
                                        <label for='from'>From</label>
                                        <input type='date' name='from' required>
                                    </div>
                                    <div>
                                            <label for='to'>To</label>
                                            <input type='date' name='to' required>
                                        </div>
                                        <div>
                                                <label for='test'>Test</label>
                                                <select name='test'>
                                                    <option value='RoutineTest'>Routine Test</option>
                                                    <option value='TypeTest'>Type Test</option>
                                                    <option value='ReCertification'>Recertification</option>
                                                </select>
                                            </div>

                                        <div>
                                            <button type='submit' class='btn'>Submit</button>
                                        </div>
                                    </form>
            <div class='messages-div reports-loader'>
                    <div class='loader' id='loader'>Loading...</div>
                    <div id='downloadBtns'> <button class="btn" id="csvBtn2">Download CSV</button> <button class="btn" id="pdfBtn2">Download PDF</button></div>
                <div id='messages-12'></div>
            </div>
            </div>
        </div>
    </div>
    </div>
</main>
<script type='text/javascript' src='/main/admin-forms.js'></script>
